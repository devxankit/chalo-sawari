# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/chalo_sawari
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/chalo_sawari

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_jwt_secret_here
JWT_REFRESH_EXPIRE=30d

# OTP Configuration
OTP_SECRET=your_otp_secret_here
OTP_EXPIRE=5m

# Twilio Configuration (SMS) - TRIAL ACCOUNT SETUP
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACyour_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
# IMPORTANT: This must be a phone number provided by Twilio (not your personal number)
# In trial accounts, you get one free number from Twilio
TWILIO_PHONE_NUMBER=+15551234567
# Optional: Twilio Verify Service SID (for advanced verification)
# TWILIO_VERIFY_SERVICE_SID=VAyour_verify_service_sid_here

# SMTP Configuration (Email) - Commented out for now
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
